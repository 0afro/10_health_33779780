<%- include("layout", {
  title: "Add Workout - RepsRealm",
  body: `
    <h2>Add Workout</h2>
    <form action="/add-workout" method="POST">

      <label>Exercise Name:</label><br>
      <input type="text" name="exercise" required><br><br>

      <label>Weight (kg):</label><br>
      <input type="number" name="weight" required><br><br>

      <label>Reps:</label><br>
      <input type="number" name="reps" required><br><br>

      <label>Notes (optional):</label><br>
      <textarea name="notes"></textarea><br><br>

      <button type="submit">Save Workout</button>
    </form>
  `
}) %>
