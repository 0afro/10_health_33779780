<% title = "Workout History"; %>
<% body = `
  <h2>Your Workout History</h2>

  ${
    workouts.length === 0
      ? "<p>No workouts logged yet.</p>"
      : `
        <table>
          <tr><th>Date</th><th>Exercise</th><th>Weight</th><th>Reps</th><th>Notes</th></tr>
          ${workouts.map(w => `
            <tr>
              <td>${new Date(w.created_at).toLocaleString()}</td>
              <td>${w.exercise}</td>
              <td>${w.weight} kg</td>
              <td>${w.reps}</td>
              <td>${w.notes}</td>
            </tr>
          `).join("")}
        </table>
      `
  }
`; %>

<%- include("layout") %>
