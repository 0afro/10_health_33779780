<% title = "Search"; %>
<% body = `
  <h2>Search Workouts</h2>

  <form action="/search" method="POST">
    <input type="text" name="query" placeholder="Search exercises..." required>
    <button type="submit">Search</button>
  </form>

  ${
    results
      ? results.length === 0
        ? "<p>No results found.</p>"
        : `
            <table>
              <tr><th>Date</th><th>Exercise</th><th>Weight</th><th>Reps</th><th>Notes</th></tr>
              ${results.map(r => `
                <tr>
                  <td>${new Date(r.created_at).toLocaleString()}</td>
                  <td>${r.exercise}</td>
                  <td>${r.weight} kg</td>
                  <td>${r.reps}</td>
                  <td>${r.notes}</td>
                </tr>
              `).join("")}
            </table>
          `
      : ""
  }
`; %>

<%- include("layout") %>
